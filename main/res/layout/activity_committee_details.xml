<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/grey">

        <android.support.v7.widget.Toolbar
            android:layout_width="397dp"
            android:layout_height="match_parent"
            android:background="@color/darkestgrey"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar"
            android:weightSum="1"
            app:titleTextAppearance="@style/AppTheme">

            <ImageView
                android:id="@+id/toolbarBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:src="@drawable/arrow_back"
                android:adjustViewBounds="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:id="@+id/toolbar_committee"
                android:textSize="18sp"
                android:layout_marginLeft="30dp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/white"
                android:text="@string/comm_details"/>

        </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/star"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:src="@drawable/favplainstar"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="320dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="475dp"
            android:layout_marginRight="20dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:baselineAligned="false">

                <TextView
                    android:text="Committee ID:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/committeeId"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:textStyle="normal|bold"
                    android:textSize="@dimen/display_text"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/commIdValue"
                    android:layout_weight="1126.27"
                    android:layout_gravity="end"
                    android:gravity="right"
                    android:textSize="@dimen/display_text"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:text="Name:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commName"
                    android:inputType="text"
                    android:layout_marginLeft="20dp"
                    android:textStyle="normal|bold"
                    android:textSize="@dimen/display_text"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commNameValue"
                    android:layout_weight="0.09"
                    android:gravity="right"
                    android:textSize="@dimen/display_text"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:text="Chamber:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commChamber"
                    android:inputType="text"
                    android:layout_marginLeft="20dp"
                    android:textStyle="normal|bold"
                    android:textSize="@dimen/display_text"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/partyImage"
                    android:layout_marginLeft="150dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commChamberValue"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="@dimen/display_text"
                    android:textAllCaps="false" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:text="Parent Committee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/parent_committee"
                    android:inputType="text"
                    android:layout_marginLeft="20dp"
                    android:textStyle="normal|bold"
                    android:textSize="@dimen/display_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/parentCommitteeValue"
                    android:layout_weight="0.02"
                    android:gravity="right"
                    android:textSize="@dimen/display_text"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:text="Contact:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commContact"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:layout_marginLeft="20dp"
                    android:textStyle="normal|bold"
                    android:textSize="@dimen/display_text"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commContactValue"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="@dimen/display_text"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:text="Office:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commOffice"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:layout_marginLeft="20dp"
                    android:textStyle="normal|bold"
                    android:textSize="@dimen/display_text"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commOfficeValue"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="@dimen/display_text"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>